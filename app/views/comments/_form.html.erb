<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
  <div class="form-group w-75">
    <br>
    <%= form.text_area :body, :class=>"form-control" %>
    <br>
  <div class="text-right text-right">
  <div class="actions">
    <%= form.submit 'Submit', :class=>"btn btn-primary" %>
  </div>
<% end %>