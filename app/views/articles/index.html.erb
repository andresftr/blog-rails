<h1>Listing Articles</h1>
<%= link_to 'New article', new_article_path, :class=>"btn btn-success"  %><br><br>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Autor</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= article.user.user_name %></td>
        <td><%= link_to 'Show', article_path(article), :class=>"btn btn-primary" %></td>
        <% if article.user.user_name == current_user.user_name %>
          <td><%= link_to 'Edit', edit_article_path(article), :class=>"btn btn-secondary" %></td>
          <td><%= link_to 'Destroy', article_path(article), :class=>"btn btn-danger", 
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  </tbody>
  <% end %>
</table>